<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dayContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/day_item_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dayLabel"
        android:layout_width="@dimen/day_label_size_events_enabled"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        tools:text="19"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/dayIcon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/day_image_height_top"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerInside" />
    <ImageView
        android:id="@+id/dayIcon2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/day_image_height_bottom"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/valueLabel"
        tools:text="50.0"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/day_image_height_bottom"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:scaleType="centerInside" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/nextMonthDayColor" />

</LinearLayout>

